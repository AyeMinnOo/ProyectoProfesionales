<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.homesolution.app.ui.settings.SettingsActivity">

    <TextView
        android:id="@+id/tvUpdateUserData"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:text="@string/settings_user_data"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/switchGeoMode"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:text="@string/settings_geo_mode"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvTermsAndConditions"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:text="@string/settings_terms"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:text="@string/settings_logout"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

</LinearLayout>
